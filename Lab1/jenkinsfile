pipeline{
    agent any
    environment{
        REPO_NAME = "RRSasASD"
        REURL = "http://github.com"
        GITUSER = "alphik"

    }

    stages{
        stage("1.global environment variables"){
            steps{
                echo "========executing A========"
            }
            post{
                always{
                    echo "lab1_1_$REPO_NAME"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }

        stage('2.Create Dynamic Variables') {
            steps {
                script {
                    env.DYNAMIC_VAR = "DynamicValue_${BUILD_NUMBER}"
                }
            }
        }


        stage('2.print Dynamic Variables') {
            steps {
            
                echo "$DYNAMIC_VAR"
            }
        }


        stage('3.Custom Scoped Environment') {
            environment {
                STAGE_VAR = 'stage_value'
            }
            steps {
            
                echo "$STAGE_VAR"
            }
        }
    }


    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}